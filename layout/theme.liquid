    <!-- INICIO INSTALE SEUS PIXELS AQUI -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="Huddle Store! ⚡️">
    <meta property="og:description" content="A melhor loja de Jerseys e Acessórios da NBA, NFL, NHL, MLB & Street">
    <meta
      property="og:image"
      content="https://cdn.shopify.com/s/files/1/0588/7960/6847/files/logo-original.jpg?v=1733353238"
    >
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:locale" content="pt_BR">
    <meta property="og:url" content="https://huddlestore.com.br">
    <meta property="og:site_name" content="Huddle Store">

    <!-- FINAL INSTALE SEUS PIXELS AQUI -->

